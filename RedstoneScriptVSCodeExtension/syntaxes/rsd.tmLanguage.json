{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "RedstoneScript",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#numbers" },
		{ "include": "#booleans" },
		{ "include": "#strings" },
		{ "include": "#comments" },
		{ "include": "#operators" },
		{ "include": "#objects" }
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.rsd",
					"match": "\\b(item|bedrock|workbench|repeater|comparator|otherwise|cut|pulse|craft|hopper)\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
				"name": "constant.numeric.rsd",
				"match": "\\b\\d+(\\.\\d+)?\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.rsd",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.rsd",
					"match": "\\\\."
				}
			]
		},
		"operators": {
			"patterns": [
				{
				"name": "keyword.operator.rsd",
				"match": "(==|!=|<=|>=|<|>|[+\\-*/%=])"
				}
			]
		},
		"objects": {
			"patterns": [
				{
				"name": "variable.other.object.rsd",
				"match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
				}
			]
		},
		"booleans": {
			"patterns": [
				{
					"name": "constant.language.boolean.rsd",
					"match": "\\b(on|off)\\b"
				}
  			]
		},
		"comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.rsd",
                    "match": "//.*$"
                }
            ]
        }
	},
	"scopeName": "source.redstone"
}